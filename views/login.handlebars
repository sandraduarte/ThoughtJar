

<div class="container animated fadeIn">
    <div class="row">
 
        <div class="col-sm-6 col-sm-offset-3 loginText">
            <h1 class="text-center"><span class="fa fa-sign-in"></span> Login</h1>

            <br>
            <br>

            <!-- show any messages that come back with authentication-->
            {{#if message.message}}
                <div class="alert alert-danger">{{message.message}}</div>
            {{/if}}
            <!-- LOGIN FORM -->
            <form action="/login" method="post">

                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username">
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>

            
                    <button type="submit" class="btn btn-lg btn-block btn-info">Login</button>
            </form>

            <br>
            <br>

            <div class="row">

                <br>
            

                <p class="redirection">Need an account? <a href="/signup">Signup</a></p>
                
            </div>
        </div>
    </div>
</div>
